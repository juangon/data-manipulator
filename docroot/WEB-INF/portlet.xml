		<resource-bundle>content/Language</resource-bundle>
		<portlet-info>
			<title>Data Manipulator (Portal)</title>
			<short-title>Data Manipulator (Portal)</short-title>
			<keywords>Data Manipulator (Portal)</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>